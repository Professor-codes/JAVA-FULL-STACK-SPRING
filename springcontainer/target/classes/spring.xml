<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->

	<bean id="userBean" class="com.bean.UserBean">
		<property name="name" value="user::name"></property>
		<property name="email" value="user::email"></property>
	</bean>

	<bean id="studentBean" class="com.bean.StudentBean" scope="prototype">
		<property name="name" value="student::name"></property>
		<property name="email" value="student::email"></property>
	</bean>
</beans>